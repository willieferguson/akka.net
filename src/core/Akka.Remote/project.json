{
  "version": "1.2.0-*",
  "title": "Akka.Remote",
  "description": "Remote actor support for Akka.NET",
  "authors": [ "Akka.NET Team" ],
  "copyright": "Copyright © 2013-2016 Akka.NET Team",

  "packOptions": {
    "licenseUrl": "https://github.com/akkadotnet/akka.net/blob/master/LICENSE",
    "projectUrl": "https://github.com/akkadotnet/akka.net",
    "iconUrl": "http://getakka.net/images/AkkaNetLogo.Normal.png",
    "owners": [ "Akka.NET Team" ],
    "requireLicenseAcceptance": false,
    "tags": [ "akka", "actors", "actor model", "Akka", "concurrency" ],
    "repository": {
      "type": "git",
      "url": "https://github.com/akkadotnet/akka.net"
    }
  },

  "dependencies": {
    "Akka": { "target": "project" },
    "System.Collections.Immutable": "1.2.0",
    "Google.ProtocolBuffers": "2.4.1.555"
  },

  "buildOptions": {
    "embed": {
      "includeFiles": [ "Configuration/Remote.conf" ]
    }
  },

  "frameworks": {
    "net45": {
      "frameworkAssemblies": {
        "System.Net": "4.0.0"
      },
      "dependencies": {
        "Helios": "2.1.2"
      },
      "buildOptions": {
        "define": [ "SERIALIZATION" ]
      }
    },
    "netstandard1.6": {
      "dependencies": {
        "Microsoft.NETCore.Portable.Compatibility": "1.0.1",
        "System.Reflection.TypeExtensions": "4.1.0"
      },
      "imports": [
        "portable-net45+win8"
      ],
      "buildOptions": {
        "define": ["CORECLR"]
      }
    }
  }
}

